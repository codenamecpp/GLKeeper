{
    "templates":
    {
        "test_button":
        {
            "class":"button", "pos":[200,200], "size":[100,100], "origin":["50%","50%"],
            "children":
            {
                "normal":
                {
                    "class":"picture_box", "size":["85%","85%"], "origin":["50%","50%"], "pos":["50%","50%"], "texture":"white", "size_mode":"scale",
                    "tint_color":"ff0000ff", "visible":true
                },
                "hovered":
                {
                    "class":"picture_box", "size":["80%","80%"], "origin":["50%","50%"], "pos":["50%","50%"], "texture":"white", "size_mode":"scale",
                    "tint_color":"00ff00ff", "visible":false
                },
                "pressed":
                {
                    "class":"picture_box", "size":["70%","70%"], "origin":["50%","50%"], "pos":["50%","50%"], "texture":"white", "size_mode":"scale",
                    "tint_color":"0000ffff", "visible":false
                }
            },
            "actions":
            {
                "on_mouse_enter": 
                [
                    {"action":"hide", "target":"normal"},
                    {"action":"hide", "target":"pressed"},
                    {"action":"show", "target":"hovered"}
                ],

                "on_mouse_leave": 
                [
                    {"action":"show", "target":"normal", "conditions":"!pressed"},
                    {"action":"show", "target":"pressed", "conditions":"pressed"},
                    {"action":"hide", "target":"hovered"}
                ],

                "on_mouse_up":
                [
                    {"action":"show", "target":"normal", "conditions":"!hovered"},
                    {"action":"hide", "target":"pressed"}
                ]
            }
        },

        "test_scrollbar":
        {
            "class":"scrollbar", "pos":[400,200], "size":[400,30], "anchors":["all"],
            "children":
            {
                "#min" : {"class":"button"},
                "#max": {"class":"button"},
                "#slider": {"class":"button"}
            }
        }
    },

    "hierarchy":
    {
        "root":
        {
            "class":"widget", "size":["100%","100%"],
            "children":
            {
                "button_0":
                {
                    "template_class":"test_button", "pos":[200,200], "size":[100,100],
                    "events":
                    {
                        "on_click": "custom_on_click_event"
                    },
                    "states":
                    {
                        "normal": { "size":[100,100] },
                        "pressed": { "size":[80,80] },
                        "hovered": { "size":[110,110] }
                    }
                },
                "slider_0": {"template_class":"test_scrollbar", "pos":[400,200], "size":[400,30]},
                "button_1": {"template_class":"test_button", "pos":[200,600], "size":[100,100]},
                "sb_0": {"template_class":"test_scrollbar", "pos":[400,600], "size":[400,30]}
            }
        }
    }
}
{
    "templates":
    {
        "test_button":
        {
            "class":"button", "pos":[200,200], "size":[52,52],
            "children":
            [
                {
                    "id":"icon", "class":"picture_box", "size":["100%","100%"], "origin":["50%","50%"], "pos":["50%","50%"],
                    "texture":"GUI\\Rooms\\Bridge_Stone", "size_mode":"scale"
                },
                {
                    "id":"unavailable_fill", "class":"picture_box", "size":["100%","100%"], "texture":"white", "size_mode":"scale",
                    "tint_color":[0,0,0,153], "visible":false
                },
                {
                    "id":"active_overlay", "class":"picture_box", "size":["100%","100%"], 
                    "texture":"GUI\\Icons\\selected-door", "size_mode":"scale", "visible":false
                },
                {
                    "id":"hover_frame", "class":"picture_box", "size":["100%","100%"], "origin":["50%","50%"], "pos":["50%","50%"],
                    "texture":"GUI\\Icons\\frame", "size_mode":"scale", "visible":false
                }
            ],
            "actions":
            {
                "on_mouse_enter": 
                [
                    {"action":"show", "value":true, "target":"hover_frame"},
                    {"action":"texture", "value":"GUI\\Options\\i-audio", "target":"icon"}
                ],
                "on_mouse_leave": 
                [
                    {"action":"show", "value":false, "target":"hover_frame"},
                    {"action":"texture", "value":"GUI\\Rooms\\Bridge_Stone", "target":"icon"}
                ],
                "on_mouse_down":
                [
                    {"action":"size", "value":["96%","96%"], "target":"icon", "conditions":"#mouse_left"}
                ],
                "on_mouse_up":
                [
                    {"action":"size", "value":["100%","100%"], "target":"icon", "conditions":"#mouse_left"}
                ],
                "init":
                [
                    {"action":"visibility", "target":"unavailable_fill", "conditions":"!available"},
                    {"action":"visibility", "target":"active_overlay", "conditions":"active"}
                ]
            }
        },

        "test_scrollbar":
        {
            "class":"scrollbar", "pos":[400,200], "size":[400,30], "anchors":"all",
            "children":
            [
                {"id":"#min", "class":"button", "draw_background":true},
                {"id":"#max", "class":"button", "draw_background":true},
                {"id":"#slider", "class":"button", "draw_background":true,
                    "actions":
                    {
                        "on_mouse_enter": 
                        [
                            {"action":"background_color", "value":"00ff00ff"}
                        ],

                        "on_mouse_leave": 
                        [
                            {"action":"background_color", "value":"666666ff"}
                        ]
                    }
                }
            ]
        }
    },

    "hierarchy":
    {
        "id":"root", "class":"panel", "size":["100%","100%"],
        "children":
        [
            {
                "id":"button_0", "template_class":"test_button", "pos":[200,200]
            },
            {"id":"slider_0", "template_class":"test_scrollbar", "pos":[400,200], "size":[400,30]},
            {"id":"button_1", "template_class":"test_button", "pos":[200,600], "size":[50,50]},
            {"id":"sb_0", "template_class":"test_scrollbar", "pos":[400,600], "size":[400,30]},
            {
                "id":"container", "class":"panel", "size":[700, 200], "draw_background":false, "pos":[200,"100%"], "anchors":["left","right","bottom"],
                "origin":[0,"100%"], "draw_borders":true, "borders_color":"00ff00ff",
                "layout":
                {
                    "type":"simple_grid", "orientation":"vert", "num_rows":2, 
                    "padding":{"left":3, "top":3},
                    "spacing":{"horz":3, "vert":3}
                },
                "children":
                [
                    {"id":"feature_button_id", "template_class":"test_button",
                        "actions":
                        {
                            "on_click":
                            [
                                {"action":"notify", "value":"custom_on_click_event"}
                            ]
                        }
                    },
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"},
                    {"template_class":"test_button"}
                ]
            }
        ]
    }
}